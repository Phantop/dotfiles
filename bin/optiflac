#!/bin/sh
mkdir out

args="-af aresample=resampler=soxr:precision=32:dither_method=triangular -sample_fmt s16"
fd -e flac -d1 -x ffmpeg -hide_banner -i {} -c:v copy -c:a flac -compression_level 12 "$args" "$@" out/{}
cd out || exit 1
comparedir ..
cd .. || exit 1

fd -e flac -d1 -x flac -f8 {} -o out/{}
cd out || exit 1
comparedir ..
cd .. || exit 1

rm -r out
