set number
set ruler
set nowrap
set textwidth=0 wrapmargin=0 tw=0
set mouse=a
set autoindent
set smartindent
set expandtab
set shiftwidth=4
set formatoptions+=j
set cursorline
set clipboard=unnamedplus
set autoread
syntax enable
filetype plugin indent on

map <F7> mzgg=G`z

set background=dark
colorscheme dracula
set termguicolors                    " Enable GUI colors for the terminal to get truecolor

autocmd FileType * set tw=0

set ignorecase
set smartcase
