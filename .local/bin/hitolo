#!/usr/bin/fish
set HIFI ~/Music/HiFi
set LOFI ~/Music/LoFi

if not test -d $LOFI
    cd $HIFI
    fd -t d -x mkdir -p $LOFI/{}
    fd -e flac -x opusenc --bitrate 72 {} $LOFI/{.}.opus
end

set args -s $HIFI -d $LOFI -o opus -q 72 --clean
acxi $args $argv || wget https://github.com/smxi/acxi/raw/stable/acxi -O- -o/dev/null | perl -- - $args $argv
