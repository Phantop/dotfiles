#!/bin/sh
H=/tmp/folheader
echo '#!/bin/sh' > $H
echo D=\"$1\" >> $H
cat >> $H <<'EOF'
if [ ! -d "$D" ]; then
    mkdir "$D"
    dwarfs -o offset=auto -o tidy_strategy=swap "$0" "$D"
else
    fusermount -u "$D"
    rmdir "$D"
fi
exit
EOF

shift
mkdwarfs -i . -o "$PWD.sh" -B3 --header $H $@
chmod +x "$PWD.sh"
rm $H
