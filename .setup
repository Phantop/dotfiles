#!/bin/bash
sudo eopkg it -c system.devel
sudo eopkg rm gnome-terminal libreoffice-common mate-terminal nautilus
sudo eopkg it aria2c fd fish kitty mpv neovim qutebrowser stow

rm ~/.bashrc
cd ~/.dotfiles
for i in `fd -t d -H`
do
    mkdir -p ~/$i
done

stow .

nvim +PlugUpdate +q +q

fish -c fisher
chsh -s /usr/bin/fish
