#!/usr/bin/fish
sudo eopkg it -c system.devel
sudo eopkg it stow

cd ~/.dotfiles
for i in (fd -t d)
    mkdir -p ~/$i
end

stow .


cd .config/mpv/scripts
for i in */
    cd $i
    make
    cd ..
end


sh -c 'curl -fLo "${XDG_DATA_HOME:-$HOME/.local/share}"/nvim/site/autoload/plug.vim --create-dirs \
       https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim'
nvim +PlugUpdate +q +q

getfisher
