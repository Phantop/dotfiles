#!/bin/bash
sudo eopkg it -c system.devel
sudo eopkg rm gnome-terminal libreoffice-common mate-terminal nautilus
sudo eopkg it fish kitty mpv-libs-devel neovim qutebrowser stow

cd ~/.dotfiles
for i in `fd -t d -H`
do
    mkdir -p ~/$i
done

stow .

cd .config/mpv/scripts
for i in */
do
    cd $i
    make
    cd ..
done

fish -c fisher
